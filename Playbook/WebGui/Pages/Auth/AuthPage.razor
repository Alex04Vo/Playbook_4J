@page "/auth"
@page "/login"

<MudContainer MaxWidth="MaxWidth.Large">
    <MudCard Style="background-color:  rgb(18, 89, 161, 0.05);">
        <MudTabs Centered="true" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" @ref="tabs">
            <MudTabPanel Text="Login" @ref="login">
                <LoginComponent/>
                <div class="d-flex">
                    <MudSpacer/>
                    <MudButton Color="Color.Primary" Variant="Variant.Text" Size="Size.Small" OnClick="() => Activate(register)">Jetzt Registrieren!</MudButton>
                </div>
            </MudTabPanel>
            <MudTabPanel Text="Registration" @ref="register" ID="@("pn_two")">
                <RegisterComponent/>
            </MudTabPanel>

        </MudTabs>
    </MudCard>
</MudContainer>


@code {
    MudTabs tabs;
    MudTabPanel login;
    MudTabPanel register;

    void Activate(MudTabPanel panel) {
        tabs.ActivatePanel(panel);
    }

}